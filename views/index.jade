            // card1
            .col-md-3.col-lg-3.col-xl-3.pb-2
              .card.my(style='color: #000000; border-radius: 30px')
                .card-body.p-4
                  .d-flex
                    h6.flex-grow-1 #{cityName}
                    |                     
                    h6 #{date}
                  |                   
                  .d-flex.flex-column.text-center.mt-5.mb-4
