                    h4.display-8.mb-0.font-weight-bold.np(style='color: #1c2331')
                      |Max: #{first_max_c}&deg;C
                      |Min:#{first_min_c}&deg;C
                    |                     
                    h4.display-8.mb-0.font-weight-bold.sh(style='display: none')
                      |Max: #{first_max_f} F
                      |Min:#{first_min_f} F
                   
                              
                  .d-flex.align-items-center
                    .flex-grow-1(style='font-size: 1rem')
                      div
                        i.fas.fa-wind.fa-fw(style='color: #868b94')
                        |                         
                        span.ms-1  #{wind}
                      |                       
                      div
                        i.fas.fa-tint.fa-fw(style='color: #868b94')
                        |                         
                        span.ms-1  #{humidity}
                      |                       
                      div
